{
    "compilerOptions": {
		"baseUrl": "src",
		"paths": {
			"*": ["*"],
			"src/*": ["./*"]
		},
        "target": "es2015",
        "strict": true,
        "module": "esnext",
        "moduleResolution": "node",
        "allowJs": true,
		"experimentalDecorators": true,
        "suppressImplicitAnyIndexErrors": true,
        "allowSyntheticDefaultImports": true,
        "strictPropertyInitialization": false,
    },
	"include": [
		"src/**/*.ts"
	],
	"compileOnSave": false,
    "files": [
        "./src/typings/index.d.ts",
        "./src/typings/es6.d.ts"
    ]
}
